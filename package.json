{
  "name": "markdown-filename-sync",
  "displayName": "markdown-filename-sync",
  "description": "A VS Code extension that syncs the filename of a markdown file with its first header.",
  "homepage": "https://github.com/dnabb/markdown-filename-sync",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": ["markdown"],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "markdown-filename-sync.renameFile",
        "title": "Markdown: rename using first header"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "markdown-filename-sync.renameFile",
          "when": "editorLangId == markdown"
        }
      ]
    },
    "configuration": {
      "title": "Markdown Filename Sync",
      "properties": {
        "markdown-filename-sync.renamingBehavior": {
          "type": "string",
          "default": "slugify",
          "enum": [
            "doNothing",
            "removeUnsafe",
            "slugify"
          ],
          "enumDescriptions": [
            "Do nothing and use header as is",
            "Remove non-safe characters",
            "Slugify header"
          ],
          "description": "Choose the behavior for renaming markdown files"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.84.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "github-slugger": "^2.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dnabb/markdown-filename-sync.git"
  }
}